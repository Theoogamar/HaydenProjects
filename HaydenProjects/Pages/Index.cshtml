<script>
    var toggle = true;
    function toggleTooltip(element, set) {
        let tooltip = element.childNodes[3];
        toggle = set == null ? toggle : set;
        if (toggle)
            tooltip.classList.add("show");
        else
            tooltip.classList.remove("show");
        toggle = !toggle;
    }
</script>
