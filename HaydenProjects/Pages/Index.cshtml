<script>
    var toggle = true;
    function togglePopup(element, set) {
        let popup = element.childNodes[3];
        toggle = set == null ? toggle : set;
        if (toggle)
            popup.classList.add("show");
        else
            popup.classList.remove("show");
        toggle = !toggle;
    }
</script>
